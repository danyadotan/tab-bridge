{
    "manifest_version": 3,
    "name": "TAB Overlay",
    "version": "0.1.0",
    "description": "TAB AI Assistant - Smart overlay with privacy-first design",
    "permissions": ["activeTab", "storage"],
    "content_scripts": [{
          "matches": ["<all_urls>"],
          "js": ["content.js"],
          "css": ["overlay.css"],
          "run_at": "document_idle"
    }],
    "web_accessible_resources": [{
          "resources": ["overlay.html", "icons/*"],
          "matches": ["<all_urls>"]
    }],
    "icons": {
          "16": "icons/icon16.png",
          "48": "icons/icon48.png",
          "128": "icons/icon128.png"
    },
    "action": {
          "default_icon": {
                  "16": "icons/icon16.png",
                  "48": "icons/icon48.png"
          },
          "default_title": "TAB Overlay"
    }
}
